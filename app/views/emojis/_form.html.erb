
<%= simple_form_for(@emoji) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :picture, as: :file %>
    <%= f.label :categories %>
    <div class="ok">
      <%= f.input :categories, as: :check_boxes, collection: Category.all.map {|category| [category.name, category.id]}, class: "checkbox-inline", label: '' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Create my super emoji!', :class => "button_submit_form_emoji" %>
  </div>
<% end %>
