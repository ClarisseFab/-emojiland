<div class="text-center d-flex justify-content-center">
    <h1 class="card-title my-5 col-11">My emojis</h1>
  </div>

<br>
<%= render partial: "emojis/category" %>
<br>


<div>
    <div id="emojis" class="d-flex f-wrap justify-content-center">
      <div class="m-3 p-0 text-center">
        <%= link_to "+ Create a new emoji", new_emoji_path, class:"new-emoji card" %>
      </div>
      <% @emojis.each do |emoji| %>
        <div class="card-h m-3 p-0">
          <div class="cnt">
            <%= render emoji %>
          </div>
          <div id="card-hover">
            <div class="btn-orange my-4">
              <%= link_to "Update emoji", edit_emoji_path(emoji), class:"textDark text-decoration-none"  %>
            </div>
            <div class="btn-orange my-4">
              <%= button_to "Delete emoji", emoji, method: :delete, class:"textDark text-decoration-none" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>




